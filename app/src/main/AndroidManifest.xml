<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sam_chordas.android.stockhawk" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <permission
        android:name="com.google.android.gcm.demo.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission
        android:name="com.google.android.gcm.demo.permission.C2D_MESSAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="com.sam_chordas.android.stockhawk.ui.MyStocksActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.sam_chordas.android.stockhawk.ui.StockDetailActivity"
            android:label="@string/app_name"
            android:parentActivityName=".ui.MyStocksActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MyStocksActivity" />
        </activity>

        <service android:name="com.sam_chordas.android.stockhawk.service.StockTaskService"
            android:permission="com.google.android.gms.permission.BIND_NETWORK_TASK_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.android.gms.gcm.ACTION_TASK_READY"/>
            </intent-filter>
        </service>
        <service android:name="com.sam_chordas.android.stockhawk.service.StockIntentService" />
        <provider
            android:authorities="com.sam_chordas.android.stockhawk.data.QuoteProvider"
            android:name="com.sam_chordas.android.stockhawk.data.generated.QuoteProvider"
            android:exported="false"/>

        <!--App Widget-->
        <receiver android:name=".appwidget.WidgetProvider"
            android:enabled="@bool/widget_enabled">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.sam_chordas.android.stockhawk.ACTION_DATA_UPDATED" />
                </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                    android:resource="@xml/stock_hawk_app_widget_info" />
        </receiver>
        <service
            android:name=".appwidget.WidgetRemoteViewsService"
            android:enabled="@bool/widget_enabled"
            android:exported="false"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
        <!--/App Widget-->
    </application>

</manifest>
